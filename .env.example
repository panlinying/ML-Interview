# copy to .env.local

# Database (from Neon dashboard)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here-min-32-chars

# Admin Secret for protected endpoints (generate with: openssl rand -hex 32)
ADMIN_SECRET=your-admin-secret-here

# GitHub OAuth (from https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# App URL (your deployed domain)
APP_URL=https://your-app.vercel.app

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000
