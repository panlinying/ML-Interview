{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd site && npm run build",
  "outputDirectory": "site/out",
  "installCommand": "cd site && npm ci",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  }
}
